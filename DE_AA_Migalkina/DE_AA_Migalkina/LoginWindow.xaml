<Window x:Class="DE_AA_Migalkina.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE_AA_Migalkina"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="259,92,241,92">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtUsername"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="txtPassword"/>
            <Button Content="Войти" Click="Login_Click"/>
            <Button Content="Зарегистрироваться" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
