<Window x:Class="CourseProject.AnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject"
        mc:Ignorable="d"
        Title="Analysis Window" 
        Height="450" Width="800">
    <Grid>
        <TextBlock Text="Выберите анализ:" 
                   FontWeight="Bold" 
                   Margin="10,35,662,359"/>
        <ComboBox Name="AnalysisComboBox" 
                  Margin="10,75,662,320" />
        <Button Name="RunAnalysisButton" 
                Content="Провести анализ" 
                Click="RunAnalysis_Click" 
                Margin="10,119,662,276"/>

        <TextBox Text="Выберите параметры"
                 Name="ParameterTextBox" 
                 Margin="10,195,662,200"/>
        <Button Name="SubmitParametersButton" 
                Content="ОК" 
                Margin="10,239,662,156"/>
    </Grid>
</Window>
