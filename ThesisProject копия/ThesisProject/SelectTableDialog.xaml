<Window x:Class="ThesisProject.SelectTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisProject"
        mc:Ignorable="d"
        Title="SelectTableDialog" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Server:" Margin="0,0,0,5"/>
            <TextBox Name="ServerTextbox" Margin="0,0,0,10"/>

            <TextBlock Text="Database:" Margin="0,0,0,5"/>
            <TextBox Name="DatabaseTextbox" Margin="0,0,0,10"/>

            <TextBlock Text="User:" Margin="0,0,0,5"/>
            <TextBox Name="UserTextbox" Margin="0,0,0,10"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Name="Passwordbox" Margin="0,0,0,10"/>

            <TextBlock Text="Select Table:" Margin="0,0,0,10"/>
            <ComboBox Name="TablesComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Select Primary Key Column:" Margin="0,0,0,10"/>
            <ComboBox Name="PrimaryKeyComboBox" Margin="0,0,0,10"/>

            <Button Content="Connect" Click="ConnectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
