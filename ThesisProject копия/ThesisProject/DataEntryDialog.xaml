<Window x:Class="ThesisProject.DataEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisProject"
        mc:Ignorable="d"
        Title="DataEntryDialog" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <ItemsControl x:Name="FieldsPanel"/>
            <Button Content="Сохранить" Click="Save_Click" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
