<Page x:Class="ThesisProject.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThesisProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid>
        <DataGrid x:Name="DataGrid" Style="{StaticResource DataGridStyle}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Добавить" Click="AddData_Click" Margin="5" Padding="10"/>
            <Button Content="Обновить" Click="UpdateData_Click" Margin="5" Padding="10"/>
            <Button Content="Удалить" Click="DeleteData_Click" Margin="5" Padding="10"/>
        </StackPanel>
    </Grid>
</Page>
