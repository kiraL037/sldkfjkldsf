<Window x:Class="ThesisProject.AuthentificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisProject"
        mc:Ignorable="d"
        Title="AuthentificationWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="296,102,296,102" Grid.ColumnSpan="2" Width="209">
            <Label Content="Логин" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" TextWrapping="Wrap" Width="120" HorizontalAlignment="Center" Margin="0,5,0,5"/>
            <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,5,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="120" Margin="0,5,0,5"/>
            <Button Content="Войти" HorizontalAlignment="Center" Margin="0,10,0,10" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
