<Window x:Class="DE_22.AddCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE_22"
        mc:Ignorable="d"
        Title="AddCommentWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Name="CommentTextBox" Text="Комментарий" Margin="0,10"/>
            <Button Content="Добавить комментарий" Click="AddCommentButton_Click" Margin="0,10"/>
            <DataGrid Name="RequestsDataGrid" AutoGenerateColumns="True" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
