<Window x:Class="DE_22.AssignMasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE_22"
        mc:Ignorable="d"
        Title="AssignMasterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Выберите мастера:" Margin="0,0,0,10"/>
            <ComboBox Name="MastersComboBox" DisplayMemberPath="fio" SelectedValuePath="userID" Margin="0,10"/>
            <Button Content="Назначить" Click="AssignButton_Click" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>
