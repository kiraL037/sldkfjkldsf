<Window x:Class="DE_22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE_22"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="RequestListView" Margin="10"/>
        <Button Content="Добавить заявку" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="AddOrder_Click"/>
        <Button Content="Посмотреть заявки" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="ViewOrders_Click"/>
        <Button Content="Редактировать заявку" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="EditOrder_Click"/>
    </Grid>
</Window>
